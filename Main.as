package  {		import flash.display.MovieClip;	import flash.display.SimpleButton;	import flash.events.MouseEvent;	import FeedScreen.FeedScreen;	import PlayScreen.PlayScreen;	import SleepScreen.SleepScreen;			public class Main extends MovieClip {				//var sceneMode:int = 1; 		/*Starting with Introduction Scene, 2=Feed, 3=Play, 4=Exercise */				//Frubb's values out of 100		public var energy:uint = 80;		public var hunger:uint = 60;		public var mood:String = "normal";   //Hyperactive, sleepy, exhausted, sugar comma, normal, happy, cheerful		public var physicalState:uint = 1;      //out of 4;				private var feedScreen:FeedScreen;		private var playScreen:PlayScreen;		private var sleepScreen:SleepScreen;				public function Main() {			// constructor code			//sceneMode = 1;			//if(sceneMode==2) {							//}					}				public function initTabButtons():void 		{			btnTabFeed.addEventListener(MouseEvent.MOUSE_DOWN, gotoFeed);			btnTabPlay.addEventListener(MouseEvent.MOUSE_DOWN, gotoPlay);			btnTabExercise.addEventListener(MouseEvent.MOUSE_DOWN, gotoExercise);			btnTabSleep.addEventListener(MouseEvent.MOUSE_DOWN, gotoSleep);		}				private function switchScene(sceneName:String):void		{			levelScreen.removeChildren();						switch(sceneName) 			{				case "feed":					if(playScreen) {						playScreen.dispose();					}					feedScreen = new FeedScreen();					levelScreen.addChild(feedScreen);										MovieClip(root).gotoAndStop(2);										btnTabFeed.removeEventListener(MouseEvent.MOUSE_DOWN, gotoFeed);					btnTabPlay.addEventListener(MouseEvent.MOUSE_DOWN, gotoPlay);					btnTabExercise.addEventListener(MouseEvent.MOUSE_DOWN, gotoExercise);					btnTabSleep.addEventListener(MouseEvent.MOUSE_DOWN, gotoSleep);					break;									case "play":					if(feedScreen) {						feedScreen.dispose();					}					playScreen = new PlayScreen();					levelScreen.addChild(playScreen);										MovieClip(root).gotoAndStop(3);										btnTabFeed.addEventListener(MouseEvent.MOUSE_DOWN, gotoFeed);					btnTabPlay.removeEventListener(MouseEvent.MOUSE_DOWN, gotoPlay);					btnTabExercise.addEventListener(MouseEvent.MOUSE_DOWN, gotoExercise);					btnTabSleep.addEventListener(MouseEvent.MOUSE_DOWN, gotoSleep);					break;									case "exercise":					MovieClip(root).gotoAndStop(4);					btnTabFeed.addEventListener(MouseEvent.MOUSE_DOWN, gotoFeed);					btnTabPlay.addEventListener(MouseEvent.MOUSE_DOWN, gotoPlay);					btnTabExercise.removeEventListener(MouseEvent.MOUSE_DOWN, gotoExercise);					btnTabSleep.addEventListener(MouseEvent.MOUSE_DOWN, gotoSleep);					break;									case "sleep":					sleepScreen = new SleepScreen();					levelScreen.addChild(sleepScreen);										MovieClip(root).gotoAndStop(5);										btnTabFeed.addEventListener(MouseEvent.MOUSE_DOWN, gotoFeed);					btnTabPlay.addEventListener(MouseEvent.MOUSE_DOWN, gotoPlay);					btnTabExercise.addEventListener(MouseEvent.MOUSE_DOWN, gotoExercise);					btnTabSleep.removeEventListener(MouseEvent.MOUSE_DOWN, gotoSleep);					break;			}					}						public function gotoFeed(evt:MouseEvent):void 		{			switchScene("feed");		}				public function gotoPlay(evt:MouseEvent):void 		{			switchScene("play");		}				public function gotoExercise(evt:MouseEvent):void 		{					}				public function gotoSleep(evt:MouseEvent):void		{			switchScene("sleep");		}	}	}